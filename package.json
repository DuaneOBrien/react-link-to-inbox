{
  "name": "react-link-to-inbox",
  "version": "0.0.4",
  "description": "A React wrapper for link-to-inbox",
  "main": "index.js",
  "scripts": {
    "audit": "snyk test",
    "build-storybook": "build-storybook",
    "build": "npm run clean && npm run compile && npm run test",
    "clean": "del index.js",
    "compile": "babel index.babel.js -o index.js",
    "coverage": "cat .coverage/lcov-report/index.html | codecov",
    "lint": "xo index.babel.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "storybook": "start-storybook -p 6006",
    "test": "npm run unit-test && npm run lint && npm run audit",
    "unit-test": "jest",
    "watch-test": "chokidar 'index.babel.js' -c 'npm run build'",
    "watch": "chokidar 'index.babel.js' -c 'npm run compile'"
  },
  "keywords": [
    "react",
    "link-to-inbox",
    "email",
    "link"
  ],
  "author": "Doug Wade <douglas.b.wade@gmail.com>",
  "license": "Apache-2.0",
  "repository": "https://github.com/indeedeng/react-link-to-inbox",
  "dependencies": {
    "global": "^4.3.1",
    "link-to-inbox": "^1.2.0",
    "lodash-template": "^1.0.0",
    "prop-types": "^15.6.1",
    "react": "0.14 || 15",
    "react-dom": "^15.4.1",
    "styled-components": "^3.2.6"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.33.1",
    "babel-cli": "^6.18.0",
    "babel-jest": "^22.4.3",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "chokidar-cli": "^1.2.0",
    "codecov": "^3.0.0",
    "del-cli": "^1.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "eslint-config-xo-react": "^0.16.0",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.3",
    "react-addons-test-utils": "^15.4.1",
    "react-test-renderer": "^15.4.1",
    "snyk": "^1.21.2",
    "xo": "^0.20.3"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setupTest.js",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "index.js"
    ],
    "coverageDirectory": ".coverage",
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "xo": {
    "extends": "xo-react",
    "space": 2,
    "env": "browser"
  }
}
